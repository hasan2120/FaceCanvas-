{
  "expo": {
    "scheme": "facecanvas",
    "name": "FaceCanvas",
    "slug": "facecanvas",
    "version": "1.0.0",
    "orientation": "portrait",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSUserTrackingUsageDescription": "Bu kimlik, bildirimleri göndermek için kullanılır.",
        "UIBackgroundModes": ["remote-notification"],
        "NSCameraUsageDescription": "Fotoğraf çekmek için kamera izni gerekiyor",
        "NSPhotoLibraryUsageDescription": "Fotoğrafları kaydetmek için galeri izni gerekiyor"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      },
      "useNextNotificationsApi": true,
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-localization",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Fotoğraf çekmek için kamera izni gerekiyor"
        }
      ]
    ]
  }
}
